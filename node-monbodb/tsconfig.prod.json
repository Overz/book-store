{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@routes": ["routes/index"],
      "@middlewares": ["middlewares/index"],
      "@utils": ["utils/index"],
      "@models": ["models/index"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.(test|spec).ts"]
}
